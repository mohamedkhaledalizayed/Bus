<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_layout"
        app:cardCornerRadius="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/feed_back_item_bg"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"

                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4/12/2018"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#6b6b6b"
                        android:id="@+id/trip_date"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05:45 PM"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#000"
                        android:id="@+id/trip_time"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_below="@id/trip_date"
                        android:layout_centerHorizontal="true"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="J466"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="#fff"
                        android:padding="@dimen/_3sdp"
                        android:background="@drawable/sign_in_bg"
                        android:id="@+id/trip_id"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/sign_in_bg"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    >

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="South Croydon"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#000"
                        android:id="@+id/trip_from"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="London"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#000"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/trip_to"
                        android:layout_below="@id/trip_from"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginStart="-6dp"
                            android:src="@drawable/ic_monetization_on_black_24dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#6b6b6b"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/seats"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#6b6b6b"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120 $"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13ssp"
                            android:textColor="#000"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:background="#99E4DFDF"
                android:id="@+id/layout"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fully Booked!"
                    android:id="@+id/full"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#000"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap here to add more buses in the future"
                    android:layout_below="@+id/full"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notify Bus"
                    android:padding="@dimen/_6sdp"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/note_started"
                    />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>